# kconnect-console Environment Configuration
# Copy this file to .env.local for local development

# =============================================================================
# WEB APPLICATION (Next.js)
# =============================================================================

# Proxy URL for browser/client-side requests
# - Local dev: http://localhost:8080
# - Docker Compose: http://localhost:8080
# - EKS/Production: https://api.yourcompany.com (your ingress/ALB URL)
NEXT_PUBLIC_PROXY_URL=http://localhost:8080

# Proxy URL for Next.js server-side rendering (SSR)
# - Local dev: http://localhost:8080 (or omit, defaults to NEXT_PUBLIC_PROXY_URL)
# - Docker Compose: http://kconnect-proxy:8080
# - EKS/Production: http://kconnect-proxy.default.svc.cluster.local:8080
INTERNAL_PROXY_URL=http://localhost:8080

# Default Kafka Connect cluster ID
NEXT_PUBLIC_CLUSTER_ID=default

# Node environment (development, production)
NODE_ENV=development

# =============================================================================
# PROXY SERVICE (Go)
# =============================================================================

# Kafka Connect REST API URL
# - Local dev: http://localhost:8083
# - Docker Compose: http://kafka-connect:8083
# - EKS/Production: http://kafka-connect-service.default.svc.cluster.local:8083
KAFKA_CONNECT_URL=http://localhost:8083

# Proxy server port
PORT=8080

# CORS allowed origins (comma-separated for multiple origins, * for all)
# - Local dev: *
# - Production: https://yourapp.com,https://www.yourapp.com
# - Multi-environment: https://app.com,https://staging.app.com,http://localhost:3000
# Note: Whitespace around commas is automatically trimmed
ALLOWED_ORIGINS=*

# =============================================================================
# DEPLOYMENT EXAMPLES
# =============================================================================

# --- Local Development (npm run dev) ---
# NEXT_PUBLIC_PROXY_URL=http://localhost:8080
# KAFKA_CONNECT_URL=http://localhost:8083
# ALLOWED_ORIGINS=*

# --- Docker Compose ---
# NEXT_PUBLIC_PROXY_URL=http://localhost:8080
# INTERNAL_PROXY_URL=http://kconnect-proxy:8080
# KAFKA_CONNECT_URL=http://kafka-connect:8083
# ALLOWED_ORIGINS=*

# --- EKS/Kubernetes Production ---
# NEXT_PUBLIC_PROXY_URL=https://kconnect-api.yourcompany.com
# INTERNAL_PROXY_URL=http://kconnect-proxy.default.svc.cluster.local:8080
# KAFKA_CONNECT_URL=http://kafka-connect-service.kafka.svc.cluster.local:8083
# ALLOWED_ORIGINS=https://kconnect.yourcompany.com
# NEXT_PUBLIC_CLUSTER_ID=production-cluster
